{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": ["trunk check", "yarn workspaces run build"],
      "runtime": "nodejs18"
    }
  ],
  "emulators": {
    "functions": {
      "port": 6060
    },
    "firestore": {
      "port": 5050
    },
    "ui": {
      "enabled": true,
      "port": 8118
    },
    "singleProjectMode": true
  }
}
